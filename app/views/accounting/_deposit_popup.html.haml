#depositModal.modal.fade.custom-modal{:role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title Deposit Money
      .modal-body
        %form{"ng-submit" => "depositMoney(currentUser.id,depositAmount)"}
          .row.form-group
            %label.col-md-3 Amount:
            .col-md-9
              %input.form-control{:min => "0", "ng-model" => "depositAmount", :required => "", :step => "1", :type => "number"}/
          .row.form-group
            %label.col-md-3
            .col-md-9.text-right
              %input.btn.btn-primary{:type => "submit", :value => "Add Money"}/
