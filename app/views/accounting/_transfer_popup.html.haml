#transferModal.modal.fade.custom-modal{:role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title Transfer Money
      .modal-body
        %form{"ng-submit" => "transferMoney(currentUser.id,transferAmount,transferaccount)"}
          .row.form-group
            %label.col-md-3 Transfer to:
            .col-md-9
              %select.form-control{"ng-model" => "transferaccount", :required => ""}
                %option{:disabled => "disabled", :selected => "selected", :value => ""} Select Account
                %option{"ng-repeat" => "transfer in transferUserAccounts", :value => "{{transfer.id}}"} {{transfer.username}}
          .row.form-group
            %label.col-md-3 Amount:
            .col-md-9
              %input.form-control{:min => "0", "ng-model" => "transferAmount", :required => "", :step => "1", :type => "number"}/
          .row.form-group
            %label.col-md-3
            .col-md-9.text-right
              %input.btn.btn-primary{:type => "submit", :value => "Transfer Money"}/
